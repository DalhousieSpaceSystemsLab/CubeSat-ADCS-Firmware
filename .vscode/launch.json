{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug native executable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/adcs",

            "windows": {
                "program": "${workspaceFolder}/build/adcs.exe",
                "miDebuggerPath": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin\\gdb.exe",
                "externalConsole": false,
            },
            "linux": {
                "program": "${workspaceFolder}/build/adcs",
                "miDebuggerPath": "gdb",
            },
            "osx": {
                "program": "${workspaceFolder}/build/adcs",
                "miDebuggerPath": "gdb",
            },

            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        },

        {
            "name": "(msp430-elf-gdb) msp430 remote debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/${input:elf_file}",
            "miDebuggerPath": "msp430-elf-gdb",
            "miDebuggerServerAddress": "localhost:2000",
            "miDebuggerArgs": "",

            //"preLaunchTask": "Flash MCU",
            "serverStarted": "Now waiting for connection...",

            "cwd": "${workspaceFolder}", 
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            },

            "stopAtEntry": true,
            "externalConsole": false,
            "logging": {
                "moduleLoad": true,
                "programOutput": true,
                "trace": false,
                "traceResponse": false,
                "exceptions": true,
                "engineLogging": false,
            },

            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            },

            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            },
            "filterStdout": true,
            "filterStderr": false,
        }
       
    ],
    "compounds": [],

    "inputs": [
        {   
            "description": "Path to the ELF file to debug (relative to workspace folder)",
            "id": "elf_file",
            "type": "promptString",
            "default": "build/adcs.elf"
        }
    ]
}