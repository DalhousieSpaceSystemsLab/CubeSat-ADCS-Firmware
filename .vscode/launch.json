{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Debug native executable",
            "type": "cppdbg",
            "request": "launch",
            "windows": {
                "program": "${workspaceFolder}/build/ADCS_application.exe",
                "miDebuggerPath": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin\\gdb.exe",
                "externalConsole": false,
            },
            "linux": {
                "program": "${workspaceFolder}/build/ADCS_application",
                "miDebuggerPath": "gdb",
            },
            "osx": {
                "program": "${workspaceFolder}/build/ADCS_application",
                "miDebuggerPath": "gdb",
            },
            "serverStarted": "Now waiting for connection...",
            
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            
        },

        {
            "name": "(msp430-elf-gdb) msp430 remote debug",
            "type": "cppdbg",
            "request": "launch",
            "miDebuggerPath": "msp430-elf-gdb",
            "miDebuggerServerAddress": "localhost:2000",
            "program": "${workspaceRoot}/${input:ELF_file}",
            "preLaunchTask": "Start MSP430 Debug Server",
            "postDebugTask": "Kill MSP430 Debug Server",
            
            "miDebuggerArgs": "load",

            "serverLaunchTimeout": 15000,

            "cwd": "${workspaceFolder}", 
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb"
            },
            "stopAtEntry": true,

        }

       
    ],
    "compounds": [],

    "inputs": [
        {   
            "description": "Path to the ELF file to debug (relative to workspace folder)",
            "id": "ELF_file",
            "type": "promptString",
            "default": "build/ADCS_application.elf"
        }
    ]
}