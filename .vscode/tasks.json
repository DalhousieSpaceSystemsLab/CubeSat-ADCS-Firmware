{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start MSP430 Debug Server",
            "type": "shell",
            "detail": "Start the msp430-elf-gdb debug server for the target device using mspdebug",
            "group": "test",
            
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
            },
            "linux" : 
            {
                "command": "mspdebug tilib gdb"
            },
            "windows" :
            {
                "command": "CARL HASN'T IMPLEMENTED THIS YET"
            },
            "osx" : {
                "command": "CARL HASN'T IMPLEMENTED THIS EITHER"
            },

            "dependsOn" : [ "Kill MSP430 Debug Server"],
            "dependsOrder": "sequence",
            
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "-MSPDebug",
                    "endsPattern": "MSP430_Close",
                }
              },

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },

            "isBackground": true,
            "promptOnClose": false,
        },

        {
            "label": "Kill MSP430 Debug Server",
            "type": "shell",
            "group": "test",
            "linux" : 
            {
                "command": "skill mspdebug"
            },
            "windows" : 
            {
                "command": "CARL HASN'T IMPLEMENTED THIS YET"
            },
            "osx" : {
                "command": "CARL HASN'T IMPLEMENTED THIS EITHER"
            },

            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },

            "isBackground": false,
            "promptOnClose": false,
        },

        {
            "label": "Flash MCU",
            "detail": "Flash the msp430 microcontroller using mspdebug.",
            "type": "shell",
            "group": "test",
            "command" : "skill mspdebug && mspdebug tilib --force-reset 'prog ${input:ELF_file}'",
            "dependsOn" : ["Build target"],
            "dependsOrder": "sequence",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "isBackground": false,
            "promptOnClose": false,
        },

        {
            "label" : "Build native",
            "detail": "Build the project to execute on the host machine",
            "group": "build",
            "type": "shell",
            "command" : "python3 ./compile.py --build-type=${input:build_type}",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "isBackground": false,
            "promptOnClose": false,
        },

        {
            "label" : "Build target ",
            "detail": "Build the project for a target device",
            "group": "build",
            "type": "shell",
            "command" : "python3 ./compile.py --cross-compile --build-type=${input:build_type}",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "isBackground": false,
            "promptOnClose": false,
        }
    ],

    "inputs": [
        {
            "id" : "build_type",
            "description": "String for the build type",
            "default": "Debug",
            "options": ["Debug", "Release"],
            "type": "pickString"
        },

        {   
            "id": "ELF_file",
            "description": "Path to the ELF file to debug (relative to workspace folder)",
            "type": "promptString",
            "default": "build/adcs.elf"
        }
    ]

}